<?php
/**
 * @file
 * Add Child menu item.
 */

use Drupal\Core\Render\Element;
/**
 * Implements hook_form_FORM_ID_alter().
 *
 * Add new link in operation column.
 */
function menu_child_item_form_menu_edit_form_alter(&$form, \Drupal\Core\Form\FormStateInterface $form_state, $form_id) {
  foreach ($form['links']['links'] as $key => $child) {
    if (preg_match('/menu_plugin_id:/', $key)) {
      $form['links']['links'][$key]['operations']['#links']['add-child']['title'] = 'Add Child';
      $form['links']['links'][$key]['operations']['#links']['add-child']['url'] = \Drupal\Core\Url::fromRoute('menu_child_item.add_child', ['menu_link_content' => $child['id']['#value']], ['query' => ['destination' => \Drupal::request()->getRequestUri()]]);
    }
  }
}

function menu_child_item_form_menu_link_content_menu_link_content_form_alter(&$form, \Drupal\Core\Form\FormStateInterface $form_state, $form_id) {
  if (\Drupal::routeMatch()->getRouteName() == 'menu_child_item.add_child') {
    $form['menu_parent']['#type'] = 'hidden';
  }
}
